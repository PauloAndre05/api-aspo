// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agendamento {
  id               String   @id @default(uuid())
  dataAgenda       DateTime
  servico          Servico? @relation(fields: [servicoId], references: [id])
  servicoId        String
  postoAtendimento Posto?   @relation(fields: [postoId], references: [id])
  postoId          String
  telefone         String
  email            String
  createdAt        DateTime @default(now())

  @@map("agendamentos")
}

model Servico {
  id          String        @id @default(uuid())
  nome        String
  descricao   String
  createdAt   DateTime      @default(now())
  Agendamento Agendamento[]

  @@map("servicos")
}

model Posto {
  id          String        @id @default(uuid())
  nome        String
  local       String
  cordenadas  String
  Agendamento Agendamento[]
  User        User[]

  @@map("postos")
}

model User {
  id      String      @id @default(uuid())
  nome    String
  email   String      @unique
  senha   String      @default(uuid())
  posto   Posto?      @relation(fields: [postoId], references: [id])
  tipo    TipoUsuario
  postoId String
  estado  UserState   @default(DESATIVADO)

  @@map("usuarios")
}

enum UserState {
  ACTIVADO
  DESATIVADO
}

enum TipoUsuario {
  SUPER_USER
  DEFAULT_USER
}

model feedback {
  id       String @id @default(uuid())
  email    String
  nome     String
  mensagem String

  @@map("feedbacks")
}
