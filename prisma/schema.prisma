// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agendamento {
  id               String         @id @default(uuid())
  dataAgenda       DateTime
  servico          Servico?       @relation(fields: [servicoId], references: [id])
  servicoId        Int
  postoAtendimento Posto?         @relation(fields: [postoId], references: [id])
  postoId          Int
  telefone         String
  email            String
  createdAt        DateTime       @default(now())
  identificacao    identificacao? @relation(references: [BI], fields: [bi])
  bi               String

  @@map("agendamentos")
}

model Servico {
  id          Int           @id @default(autoincrement())
  nome        String
  createdAt   DateTime      @default(now())
  Agendamento Agendamento[]

  @@map("servicos")
}

model Posto {
  id          Int           @id @default(autoincrement())
  nome        String
  local       String
  cordenadas  String
  utilizador  String
  senha       String        @default("0000")
  Agendamento Agendamento[]

  @@map("postos")
}

model Users {
  id         String @id @default(uuid())
  nome       String
  utilizador String
  cargo      String
  senha      String @default("1111")
}

model identificacao {
  BI               String        @id
  nome             String
  dataDeNascimento String
  Agendamento      Agendamento[]
}
