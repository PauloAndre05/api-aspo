// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agendamento {
  id               String   @id @default(uuid())
  dataAgenda       String
  servico          Servico? @relation(fields: [servicoId], references: [id])
  servicoId        String
  postoAtendimento Posto?   @relation(fields: [postoId], references: [id])
  postoId          String
  telefone         String
  email            String
  bi               String
  horario          Horario  @relation(fields: [horaId], references: [id])
  horaId           String
  createdAt        DateTime @default(now())

  @@map("agendamentos")
}

model Servico {
  id          String        @id @default(uuid())
  nome        String
  descricao   String
  createdAt   DateTime      @default(now())
  Agendamento Agendamento[]

  @@map("servicos")
}

model Posto {
  id          String        @id @default(uuid())
  nome        String
  local       String
  cordenadas  String
  Agendamento Agendamento[]
  Users       Users[]

  @@map("postos")
}

model Users {
  id      String      @id @default(uuid())
  nome    String
  email   String      @unique
  senha   String
  posto   Posto?      @relation(fields: [postoId], references: [id])
  tipo    TipoUsuario @default(DEFAULT_USER)
  postoId String
  estado  UserState   @default(DESATIVADO)
}

model Horario {
  id          String        @id @default(uuid())
  hora        String
  disponivel  Boolean       @default(true)
  Agendamento Agendamento[]
}

enum UserState {
  ACTIVADO
  DESATIVADO
}

enum TipoUsuario {
  SUPER_USER
  DEFAULT_USER
}

model newslettrs {
  id       String @id @default(uuid())
  email    String
  nome     String
  mensagem String
}
